@model IEnumerable<Project_BanLapTop.Models.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-content-wp" class="checkout-page">
    <div class="section" id="breadcrumb-wp">
        <div class="wp-inner">
            <div class="section-detail">
                <ul class="list-item clearfix">
                    <li>
                        <a href="?page=home" title="">Trang chủ</a>
                    </li>
                    <li>
                        <a href="" title="">Thanh toán</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <form action="" method="post" id="form-checkout">
        <div id="wrapper" class="wp-inner clearfix">
            <div class="section" id="customer-info-wp">
                <div class="section-head">
                    <h1 class="section-title">Thông tin khách hàng</h1>
                </div>
                <div class="section-detail">
                    @{
                        var guest = (Project_BanLapTop.Models.tb_guest)Session["Account"];
                    }
                    <div class="row">
                        <div class="col-sm-3">Họ tên</div>
                        <div class="col-sm-9">@guest.Fullname</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">Email</div>
                        <div class="col-sm-9">@guest.Email</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">Địa chỉ</div>
                        <div class="col-sm-9">@guest.AddressShip</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">Số điện thoại</div>
                        <div class="col-sm-9">@guest.Phone</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="notes">Ghi chú</label>
                        </div>
                        <div class="col-sm-9">
                            <textarea name="note" class="form-control" style="width:100%;height: 150px;"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section" id="order-review-wp">
                <div class="section-head">
                    <h1 class="section-title">Thông tin đơn hàng</h1>
                </div>
                <div class="section-detail">
                    <table class="shop-table" style="width:100%">
                        <thead>
                            <tr>
                                <td>Sản phẩm</td>
                                <td>Tổng</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="cart-item">
                                    <td class="product-name">@item.Name<strong class="product-quantity">x @item.Quantity</strong></td>
                                    <td class="product-total">@string.Format("{0:0,0}", item.Price)đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="order-total">
                                <td>Tổng đơn hàng:</td>
                                <td><strong class="total-price">@string.Format("{0:0,0}", Project_BanLapTop.Models.LibraryCart.TotalPrice())đ</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div id="payment-checkout-wp">
                        <ul id="payment_methods">
                            <li>
                                <input type="radio" id="payment-home" checked name="payment-method" value="payment-home">
                                <label for="payment-home">Thanh toán khi nhận hàng</label>
                            </li>
                        </ul>
                    </div>
                    <div class="place-order-wp clearfix">
                        <input type="submit" id="order-now" value="Đặt hàng">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>