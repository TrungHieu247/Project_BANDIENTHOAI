@model Project_BanLapTop.Models.tb_guest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/public/reset.css">
    <link rel="stylesheet" href="~/Content/public/css/import/login.css">
    <title>Trang đăng nhập</title>
</head>

<body>
    <div id="wp-form-register">
        <h1 class="title-login">Đăng ký</h1>
        <form action="" method="POST" id="form-login">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <input type="text" name="Fullname" id="fullname" placeholder="Họ và tên" value="">
            @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
            <input type="text" name="Email" id="email" placeholder="Email" value="">
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <input type="text" name="Phone" id="phone" placeholder="Số điện thoại" value="">
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            <input type="text" name="AddressShip" id="addressShip" placeholder="Địa chỉ" value="">
            @Html.ValidationMessageFor(model => model.AddressShip, "", new { @class = "text-danger" })
            <input type="text" name="Username" id="username" placeholder="Tên đăng nhập" value="">
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            <input type="password" name="Password" id="password" placeholder="Mật khẩu">
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <span class="text-danger">@TempData["Password"]</span>
            <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                   id="confirm_password" name="confirm_password" type="password" value="" aria-describedby="MatKhauXacNhan-error"
                   aria-invalid="true" placeholder="Nhập lại mật khẩu">
            <span class="text-danger">@TempData["Confirm_password"]</span>
            <input type="date" name="date_of_birth" value="" id="Date_of_birth" class="form-control" style="display:block" />
            @Html.ValidationMessageFor(model => model.Date_of_birth, "", new { @class = "text-danger" })
            <div class="form-check">
                <input type="radio" class="form-check-input" id="male" name="Gender" value="Nam">
                <label class="form-check-label" for="male">
                    Nam
                </label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="fe-male" name="Gender" value="Nữ">
                <label class="form-check-label" for="fe-male">
                    Nữ
                </label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="other" name="Gender" value="Khác">
                <label class="form-check-label" for="other">
                    Khác
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            <a href="~/Account/Login">Đăng nhập</a>
            <input type="submit" value="Đăng ký" name="btn-register" id="btn-reg">
        </form>
    </div>
</body>
</html>